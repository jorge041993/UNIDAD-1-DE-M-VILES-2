<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.george.eva1_2_fragmentos.Principal">

    <fragment
        android:id="@+id/blue_fragment"
        android:name="com.example.george.eva1_2_fragmentos.BlueFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        ></fragment>

    <fragment
        android:id="@+id/red_fragment"
        android:name="com.example.george.eva1_2_fragmentos.RedFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        ></fragment>

</LinearLayout>
